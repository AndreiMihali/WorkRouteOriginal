<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentos.CuentaFragment">

    <TextView
        android:id="@+id/tvPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="20dp"
        android:text="Preferences"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="98dp" />

    <TextView
        android:id="@+id/notificationsButton"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15sp"
        android:paddingHorizontal="50dp"
        android:paddingVertical="5dp"
        android:textSize="16sp"
        android:textColor="@color/secondary"
        android:text="Notifications"
        tools:layout_editor_absoluteX="137dp" />
    <TextView
        android:id="@+id/mapStyleButton"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="50dp"
        android:paddingVertical="5dp"
        android:textSize="16sp"
        android:textColor="@color/secondary"
        android:text="Google Map Style"
        tools:layout_editor_absoluteX="137dp" />

    <TextView
        android:id="@+id/tvDrivingLicense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginStart="20dp"
        android:text="Driving License"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="98dp" />

    <TextView
        android:id="@+id/myDrivingLicenseButton"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingHorizontal="50dp"
        android:paddingVertical="5dp"
        android:textSize="16sp"
        android:textColor="@color/secondary"
        android:text="Add or view my driving license"
        tools:layout_editor_absoluteX="137dp" />

    <TextView
        android:id="@+id/tvPayMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginStart="20dp"
        android:text="Pay Method"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="98dp" />

    <TextView
        android:id="@+id/myPayMethodButton"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingHorizontal="50dp"
        android:paddingVertical="5dp"
        android:textSize="16sp"
        android:textColor="@color/secondary"
        android:text="Add or view my pay method"
        tools:layout_editor_absoluteX="137dp" />

    <TextView
        android:id="@+id/tvAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginStart="20dp"
        android:text="About"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="98dp" />

    <TextView
        android:id="@+id/helpButton"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingHorizontal="50dp"
        android:paddingVertical="5dp"
        android:textSize="16sp"
        android:textColor="@color/secondary"
        android:text="Help"
        tools:layout_editor_absoluteX="137dp" />

    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:backgroundTint="@color/secondary"
        android:background="@android:color/transparent"
        android:textColor="#CC1F1F"
        android:text="Log Out" />
</LinearLayout>