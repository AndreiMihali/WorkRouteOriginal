<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.GeneralSettingsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarSettings"
        android:layout_width="match_parent"
        app:title="Settings"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/Theme.MaterialComponents.DayNight"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:navigationIconTint="@color/secondary"
        app:titleTextColor="@color/secondary" />


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.divider.MaterialDivider>

    <TextView
        android:id="@+id/tvNotificationPreferences"
        android:textSize="18sp"
        android:drawableStart="@drawable/ic_baseline_notifications_24"
        android:drawableTint="@color/secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="  Notification Preferences" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emailNotifications"
            android:textSize="18sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:padding="20dp"
            android:text="Email notifications" />

        <CheckBox
            android:id="@+id/checkBoxEmailNotifications"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appNotifications"
            android:textSize="18sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:padding="20dp"
            android:text="App notifications" />

        <CheckBox
            android:id="@+id/checkBoxAppNotifications"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/tvNotificationPreferences2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_fmd_good_24"
        android:drawableTint="@color/secondary"
        android:padding="20dp"
        android:text="  Google Map View"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/radioGroupMapViews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:checkedButton="@id/radioMapView1">


       <RadioButton
           android:id="@+id/radioMapView1"
           android:layout_marginStart="60dp"
           android:padding="20dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:textSize="18sp"
           android:text="View 1"/>

        <RadioButton
            android:id="@+id/radioMapView2"
            android:layout_marginStart="60dp"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:text="View 2"/>

    </RadioGroup>

    <TextView
        android:id="@+id/tvNotifications"
        android:textSize="18sp"
        android:drawableStart="@drawable/ic_baseline_help_24"
        android:drawableTint="@color/secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="  How to use WorkRoute" />

    <TextView
        android:id="@+id/tvAboutUs"
        android:textSize="18sp"
        android:drawableStart="@drawable/ic_baseline_people_24"
        android:drawableTint="@color/secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="  About WorkRoute Developers" />

</LinearLayout>