<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        app:elevation="0dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:toolbarId="@+id/toolbar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleCollapseMode="fade"
            app:titleEnabled="false"
            app:title="USERASA"
            app:contentScrim="@android:color/transparent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                app:layout_collapseMode="pin"
                android:theme="@style/Theme.MaterialComponents.DayNight"
                android:layout_height="?attr/actionBarSize"
                app:titleTextColor="@color/secondary"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                app:navigationIconTint="@color/secondary"
                android:layout_width="match_parent"/>

            <RelativeLayout
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                app:layout_collapseParallaxMultiplier="@integer/material_motion_duration_medium_2"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cared_foto"
                    android:layout_width="120dp"
                    app:cardCornerRadius="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerInParent="true"
                    android:layout_height="120dp">

                    <ImageView
                        android:id="@+id/imagen_perfil"
                        android:layout_width="match_parent"
                        android:src="@drawable/default_user_login"
                        android:scaleType="centerCrop"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cared_foto"
                    android:layout_marginTop="80dp"
                    android:layout_centerHorizontal="true"
                    android:text="USER SJASJA"
                    android:textColor="@color/secondary"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/level"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/name"
                    android:layout_marginHorizontal="40dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lvl_actual"
                        android:layout_width="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:textColor="@color/secondary"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                    <ProgressBar
                        android:id="@+id/progress_lvl"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="10dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:progressTint="@color/secondary"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/lvl_next"
                        android:layout_width="wrap_content"
                        android:text="1"
                        android:textSize="18sp"
                        android:textColor="@color/secondary"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activitys.Profile" >

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>