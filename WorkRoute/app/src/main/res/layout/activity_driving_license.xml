<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/back_login"
    android:layout_height="match_parent"
    tools:context=".activitys.DrivingLicense">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Drive License"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:navigationIconTint="@color/secondary"
        app:titleTextColor="@color/secondary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        />

    <View
        android:id="@+id/divider"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <ImageView
        android:id="@+id/imageCarnetFrente"
        android:layout_width="235dp"
        android:layout_height="145dp"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/carnetfrente" />

    <Button
        android:id="@+id/buttonFront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageCarnetFrente"
        android:layout_centerInParent="true"
        android:layout_marginVertical="20dp"
        android:backgroundTint="@color/secondary"
        android:text="FRONT"
        android:textColor="@color/white"
        app:cornerRadius="100dp" />

    <ImageView
        android:id="@+id/imageCarnetReverso"
        android:layout_width="235dp"
        android:layout_height="145dp"
        android:layout_below="@id/buttonFront"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/reversocarnet" />

    <Button
        android:id="@+id/buttonReverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageCarnetReverso"
        android:layout_centerInParent="true"
        android:layout_marginVertical="20dp"
        android:backgroundTint="@color/secondary"
        android:text="REVERSE"
        android:textColor="@color/white"
        app:cornerRadius="100dp" />

    <Button
        android:id="@+id/buttonSaveLicense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonReverse"
        android:layout_centerInParent="true"
        android:layout_marginVertical="20dp"
        android:backgroundTint="@color/quantum_googgreen"
        android:text="SAVE MY DRIVE LICENSE"
        android:textColor="@color/white"
        app:cornerRadius="100dp" />


</RelativeLayout>