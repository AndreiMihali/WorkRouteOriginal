<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back_login"
    android:theme="@style/Theme.MaterialComponents.DayNight"
    app:contentPadding="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    android:layout_marginVertical="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_profile_photo_chat_list"
            android:layout_width="50dp"
            android:layout_centerVertical="true"
            android:theme="@style/Theme.MaterialComponents.DayNight"
            app:cardCornerRadius="100dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/profile_photo_chat_list"
                android:layout_width="match_parent"
                android:src="@drawable/default_user_login"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toEndOf="@id/card_profile_photo_chat_list"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_user_name_chat_list"
                android:layout_width="wrap_content"
                android:text="Andrei Mihali"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/secondary"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_lastMessage_chat_list"
                android:layout_width="wrap_content"
                android:text="I wiil be there in 15 min"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="#575757"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_last_message_time_chat_list"
            android:layout_width="wrap_content"
            android:text="10:20"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:textSize="14sp"
            android:textColor="#575757"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>