<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rela"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@color/back_login"
    android:layout_height="match_parent"
    tools:context=".activitys.MainActivity">

    <com.google.android.material.card.MaterialCardView
        app:cardBackgroundColor="#BFD7F3"
        android:id="@+id/card_driver_general"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:theme="@style/Theme.MaterialComponents.DayNight"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_driver"
                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"
                android:theme="@style/Theme.MaterialComponents.DayNight"
                android:layout_height="180dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/driver" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_below="@id/card_driver"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Be the driver"
                    android:textSize="25sp"
                    android:textColor="#040404" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:text="Earn some extra money taking people to their destination while you go to work."
                    android:textSize="16sp"
                    android:textColor="#515151" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_driver"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    app:backgroundTint="@color/secondary"
                    app:cornerRadius="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Be the driver"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        app:cardBackgroundColor="#BFD7F3"
        android:id="@+id/card_customer_general"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_driver_general"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:theme="@style/Theme.MaterialComponents.DayNight"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="20dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_customer"
                android:layout_width="match_parent"
                android:theme="@style/Theme.MaterialComponents.DayNight"
                app:cardCornerRadius="20dp"
                android:layout_height="180dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/customer" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_customer"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Be the customer"
                    android:textColor="#040404"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:lineSpacingExtra="5dp"
                    android:text="Simply walk in, request a ride and go to your workplace."
                    android:textColor="#515151"
                    android:textSize="16sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_customer"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:text="Be the customer"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:backgroundTint="@color/secondary"
                    app:cornerRadius="100dp" />
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>