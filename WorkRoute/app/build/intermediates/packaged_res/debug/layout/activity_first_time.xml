<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".activitys.FirstTimeActivity">

    <LinearLayout
        android:gravity="center"
        android:id="@+id/texts"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="It seems like it's your first time here"
            android:textColor="@color/textOnPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#9C9A9A"
            android:textSize="16sp"
            android:text="Complete your data"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_photo"
        android:layout_width="150dp"
        android:layout_below="@id/texts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:theme="@style/Theme.MaterialComponents.DayNight"
        app:cardCornerRadius="100dp"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:src="@drawable/default_user_login"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content"/>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/layout_ed_alias"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@id/card_photo"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_name"
            android:background="@android:color/transparent"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:text="Username"
            android:textSize="18sp"
            android:textColor="@color/secondary"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_camera"
        android:layout_width="wrap_content"
        android:layout_alignEnd="@id/card_photo"
        android:layout_alignBottom="@id/card_photo"
        app:srcCompat="@drawable/ic_baseline_camera_alt_24"
        app:backgroundTint="@color/secondary"
        app:tint="@color/white"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/linears_datos"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/layout_ed_alias"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_spiiner"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:theme="@style/Theme.MaterialComponents.DayNight"
            android:layout_gravity="center"
            app:cardCornerRadius="100dp"
            android:outlineProvider="none"
            app:contentPadding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_ciudad"
                android:layout_width="match_parent"
                android:text="Enter your location"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#9C9A9A"
                android:drawableStart="@drawable/ic_baseline_location_city_24"
                android:drawableTint="#BABABA"
                android:layout_height="30dp" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_birthday"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:theme="@style/Theme.MaterialComponents.DayNight"
            android:layout_gravity="center"
            app:cardCornerRadius="100dp"
            android:outlineProvider="none"
            app:contentPadding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_cumple"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Choose your day of birth"
                android:textSize="18sp"
                android:textColor="#9C9A9A"
                android:drawableStart="@drawable/ic_baseline_calendar_month_24"
                android:drawableTint="#BABABA"
                android:layout_height="30dp"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_continue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linears_datos"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="CONTINUE"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="@color/secondary"
        app:cornerRadius="20dp" />

</RelativeLayout>